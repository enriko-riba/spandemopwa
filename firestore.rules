service cloud.firestore {
  match /databases/{database}/documents {
    match /notes/{anyDocument} {
     function isNoteGlobal() {
        return get(/databases/$(database)/documents/notes).where("globalshare", "==", true);
      }
      allow read: if isNoteGlobal();
      allow write: if request.auth != null;
    }
  }
}
